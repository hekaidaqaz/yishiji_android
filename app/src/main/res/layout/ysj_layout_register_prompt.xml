<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/prompt_mobile_txt"
        style="@style/regiser_prompt_txt_style"
        android:text="@string/prompt_step_1"
        android:paddingRight="5dp"
        android:drawableRight="@drawable/icon_arrow"
        />
    <TextView
        android:id="@+id/prompt_auth_code_txt"
        style="@style/regiser_prompt_txt_style"
        android:text="@string/prompt_step_2"
        android:paddingRight="5dp"
        android:drawableRight="@drawable/icon_arrow"

    />
    <TextView
        android:id="@+id/prompt_pwd_txt"
        style="@style/regiser_prompt_txt_style"
        android:text="@string/prompt_step_3"
        android:paddingRight="5dp"
        android:drawableRight="@drawable/icon_arrow"
    />


</LinearLayout>